- title "Comments"

%table
  %tr
    %th Name
    %th Content
  - for comment in @comments
    %tr
      %td= comment.name
      %td= comment.content
      %td= link_to 'Show', comment
      %td= link_to 'Edit', edit_comment_path(comment)
      %td= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Comment", new_comment_path
