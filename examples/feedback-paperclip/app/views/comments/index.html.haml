- title "Comments"

- for comment in @comments
	.comment-row
		.comment-controls
			= link_to 'Show', comment
			= link_to 'Edit', edit_comment_path(comment)
			= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete
		.comment-photo
			= link_to( (image_tag comment.photo.url(:thumb)), comment )
		.comment-text
			= comment.caption
			%p
				Posted #{time_ago_in_words comment.created_at} ago by #{comment.name}

%p= link_to "New Comment", new_comment_path
